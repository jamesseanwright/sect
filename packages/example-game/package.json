{
  "name": "@tecs/example-game",
  "version": "0.0.1",
  "description": "An example game using various packages in the monorepo",
  "private": true,
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "npm run create-dist-dir && tsc && npm run build-client",
    "build-client": "rollup dist/index.js --f iife | minify --out-file dist/index.min.js && cp src/index.html dist",
    "create-dist-dir": "mkdir -p dist && rm -rf dist/*",
    "dev-success": "npm run build-client && npm test",
    "lint": "tslint -c ../../tslint.json 'src/**/*.ts'",
    "prepublishOnly": "npm run build",
    "test": "npm run lint",
    "watch": "tsc-watch --onSuccess 'npm run dev-success'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamesseanwright/tecs.git"
  },
  "keywords": [
    "ecs",
    "entity-component-system",
    "entity",
    "component",
    "system",
    "games",
    "typescript"
  ],
  "author": "James Wright <james@jamesswright.co.uk>",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "bugs": {
    "url": "https://github.com/jamesseanwright/tecs/issues"
  },
  "homepage": "https://github.com/jamesseanwright/tecs#readme",
  "dependencies": {
    "@tecs/basics": "^0.1.2",
    "@tecs/core": "^0.1.0"
  },
  "devDependencies": {
    "babel-minify": "0.4.0",
    "chai": "4.1.2",
    "rollup": "0.58.1",
    "sinon": "4.4.9"
  }
}
