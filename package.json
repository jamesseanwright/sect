{
  "name": "tecs",
  "version": "0.0.1",
  "description": "A small Entity-Component-System framework for JavaScript games, with first-class TypeScript support",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && npm run copy-html",
    "copy-html": "cp src/index.html dist",
    "dev": "rm -rf dist && tsc-watch --onSuccess 'npm run dev-success'",
    "dev-success": "npm run copy-html && npm test",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "test": "npm run lint && mocha 'dist/**/__tests__/*.test.js'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jamesseanwright/tecs.git"
  },
  "keywords": [
    "ecs",
    "entity-component-system",
    "entity",
    "component",
    "system",
    "games",
    "typescript"
  ],
  "author": "James Wright <james@jamesswright.co.uk>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jamesseanwright/tecs/issues"
  },
  "homepage": "https://github.com/jamesseanwright/tecs#readme",
  "devDependencies": {
    "@types/chai": "4.1.2",
    "@types/mocha": "2.2.48",
    "@types/node": "9.4.6",
    "@types/sinon": "4.3.0",
    "chai": "4.1.2",
    "mocha": "5.0.1",
    "mock-raf": "1.0.0",
    "sinon": "4.4.2",
    "tsc-watch": "1.0.16",
    "tslint": "5.9.1",
    "typescript": "2.7.2"
  }
}
